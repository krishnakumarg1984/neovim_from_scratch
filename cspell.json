{
  "language": "en",
  // words - list of words to be always considered correct
  "words": [
    "foldmarker",
    "foldmethod",
    "foldlevel",
    "shiftwidth",
    "softtabstop",
    "keymaps",
    "githubusercontent",
    "streetsidesoftware",
    "vsmarketplacebadge",
    "visualstudio"
  ]
}

